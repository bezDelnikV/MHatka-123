                        <option value="Нова пошта">Нова пошта</option>
                        <option value="УКРПОШТА">УКРПОШТА</option>
                        <option value="Royal Mail">Royal Mail</option>
                        <option value="US Mail Delivery">US Mail Delivery</option>
                    </select>
                </div>
                <div class="summary-total">
                    <div class="total-title">Півдсумок</div>
                    <div class="total-value final-value" id="basket-total"></div>
                </div>
                <div class="summary-checkout">
                    <button class="checkout-cta" id="SendEmail">Оформити замовлення</button>
